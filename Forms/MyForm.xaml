<Window x:Class="RAA_Level2.MyForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAA_Level2"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="500"
             Icon="/RAA_Level2;component/Resources/Blue_16.png" 
             Title="Revit Add-In Academy"
             Background="Transparent"
             AllowsTransparency="True"
             WindowStyle="SingleBorderWindow"
             WindowStartupLocation="CenterScreen"
             >
    <Grid Margin="0,0,0,0" Background="#FFF0F0F0">
